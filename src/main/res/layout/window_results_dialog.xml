<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/image_extra_large"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/window_background"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_under_small"
        android:paddingTop="@dimen/margin_under_small"
        android:paddingEnd="@dimen/margin_under_small"
        android:paddingBottom="@dimen/margin_very_small">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/image_very_small"
            android:layout_height="@dimen/image_very_small" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_very_small"
            android:gravity="center"
            android:text="Message"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/next"
            style="@style/RoundedButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_very_small"
            android:backgroundTint="@color/green"
            android:paddingTop="@dimen/margin_extra_small"
            android:paddingBottom="@dimen/margin_extra_small"
            android:textAppearance="?android:textAppearanceSmall" />

    </LinearLayout>
</LinearLayout>
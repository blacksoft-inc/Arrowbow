<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/image_extra_large"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/window_background"
        android:backgroundTint="@color/extra_light_gray"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_small"
        android:paddingTop="@dimen/margin_small"
        android:paddingEnd="@dimen/margin_small"
        android:paddingBottom="@dimen/margin_very_small">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/image_small"
            android:layout_height="@dimen/image_small"
            android:src="@drawable/warning" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_very_small"
            android:gravity="center"
            android:text="Message"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/negative_action"
                style="@style/RoundedButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_very_small"
                android:layout_marginRight="@dimen/margin_very_small"
                android:layout_weight="1"
                android:backgroundTint="@color/red"
                android:paddingTop="@dimen/margin_extra_small"
                android:paddingBottom="@dimen/margin_extra_small"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
                android:id="@+id/positive_action"
                style="@style/RoundedButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/green"
                android:gravity="center"
                android:paddingTop="@dimen/margin_extra_small"
                android:paddingBottom="@dimen/margin_extra_small" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>